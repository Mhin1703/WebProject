@model Giayne.Models.SANPHAM

@{
    ViewBag.Title = "xemChiTiet";
    Layout = "~/Views/Shared/USER.cshtml";
}

<h2>XEM CHI TIẾT</h2>
<div class="card border-dark">
    <table class="border-dark mx-3 mb-3 mt-3">
        <tr class="text-left">
            <td rowspan="5" width="45%">
                <img class="card-header" src="@Url.Content("~/hanh/"+Model.ANHBIA)" width="100%" height="100%" />
            </td>

            <td width="20%">TÊM SẢN PHẨM:</td>
            <td width="35%" style="font-weight: bold; color: lightcoral">@Model.TENSP</td>
        </tr>
        <tr class="text-left">
            <td>ĐÁNH GIÁ: </td>
            <td style="color:blue">@Model.MOTA</td>
        </tr>
        <tr class="text-left">
            <td>LOẠI SẢN PHẨM: </td>
            <td style="color:blue">@Model.LOAI.TENLOAI</td>
        </tr>

        <tr class="text-left">
            <td>THƯƠNG HIỆU: </td>
            <td style="color:blue">@Model.NHASANXUAT.TENNSX</td>
        </tr>
        <tr class="text-left">
            <td>GIÁ BÁN: </td>
            <td style="color:blue">@Model.GIABAN</td>
        </tr>
        <td>
            <a href="@Url.Action("ThemGioHang","GioHang",new { @ms = Model.MASP, @strURL = Request.Url.ToString() })">
                <input type="submit" value="MUA NGAY" class="btn btn-primary" /> 
            </a>
            <a href="@Url.Action("SPpartial","SanPham")">
                <input type="submit" value="MUA TIẾP" class="btn btn-primary" />
            </a>
        </td>
    </table>
</div>
