@using Giayne.Models;
@model List<GioHang>

@{
    ViewBag.Title = "SuaGioHang";
    Layout = "~/Views/Shared/USER.cshtml";
}

<center><h2 class="text-info">GIỎ HÀNG CỦA BẠN</h2></center>

<table class="table-bordered font-italic divGioHang">
    <tr style="background-color:lightcoral">
        <th>MÃ SẢN PHẨM</th>

        <th>TÊN SẢN PHẨM</th>

        <th>ẢNH SẢN PHẨM</th>

        <th>SỐ LƯỢNG</th>

        <th>GIÁ BÁN</th>


        <th>THÀNH TIỀN</th>
        <th></th>
    </tr>
     @foreach (var item in Model)
    {
        <tr>
            <td> @item.masp</td>

            <td> @item.tensp</td>

            <td> <img src="@Url.Content("~/hanh/" +item.anh)" width="100" height="100" /></td>

            

            @*Chỉnh sửa giỏ hàng gọi về action CapNhatGioHang*@
            @using (Html.BeginForm("CapNhatGH", "GioHang", new { @MaSP = item.masp }))
            {
                <td><input type="number" min="1" name="txtSL" value="@item.sl" size="2" />@*@Html.TextBox("txtSL", item.sl)*@ </td>

                <td>@String.Format("{0:0,0}",item.giaban) VNĐ</td>

                <td>@String.Format("{0:0,0}",item.thanhtien) VNĐ</td>
                <td>
                    <input type="submit" value="Cập nhật" class="btn-secondary" />
                    <br />
                    @*Xóa giỏ hàng gọi về Action XoaGioHang*@
                    <button class="btn-success">@Html.ActionLink("Xóa", "xoaGH", new { @MaSP = item.masp })</button>
                </td>
            }

        </tr>
    }
</table>



